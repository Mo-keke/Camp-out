<% if post.book_marked_by?(current_user) %>
  <%= link_to post_book_marks_path(post.id), method: :delete, remote: true, class: "link-dark link-underline-opacity-0" do %>
    <i class="fa-solid fa-bookmark fa-lg" style="color:limegreen;"></i>
  <% end %>
  <% if post.user == current_user %>
    <span><%= post.book_marks.count %></span>
  <% end %>
<% else %>
  <%= link_to post_book_marks_path(post.id), method: :post, remote: true, class: "link-dark link-underline-opacity-0" do %>
    <i class="fa-regular fa-bookmark fa-lg"></i>
  <% end %>
  <% if post.user == current_user %>
    <span><%= post.book_marks.count %></span>
  <% end %>
<% end %>