<div class="container-fruid">
  <div class="row">

    <!-- 自身のユーザー情報を表示するサイドバー -->
    <%= render 'public/users/login_user_sidebar', obj: @user %>

    <!-- 新規投稿フォーム -->
    <div class="col-6 offset-1 mt-4">
      <div class="container">
        <div class="row mb-3">
          <div class="col">
            <h5><新規投稿></h5>
          </div>
        </div>
        <%= form_with model: @post do |f| %>
          <div class="row mb-3">
            <div class="col">
              <%= f.text_area :body, rows: "6", placeholder: "投稿内容を入力してください。", class: "form-control border-secondary" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.submit "投稿する", class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>