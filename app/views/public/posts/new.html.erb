<div class="container-fruid">
  <div class="row">

    <!-- 自身のユーザー情報を表示するサイドバー -->
    <div class="col-2 offset-1 px-2 border-end vh-100">
      <div class="container">
        <div class="row mt-5 mb-2">
          <div class="col px-0">
            <%= image_tag @user.get_profile_image(150, 150) %>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col px-0">
            <h3 style="width: 150px;"><%= @user.name %></h3>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col px-0">
            <%= link_to edit_user_path do %>
              <button class="btn btn-outline-secondary" style="width: 150px;">プロフィール編集へ</button>
            <% end %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col px-0">
            <%= link_to book_marks_path do %>
              <button class="btn btn-outline-secondary" style="width: 150px;">ブックマーク一覧へ</button>
            <% end %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col px-0">
            <%= link_to new_post_path do %>
              <button class="btn btn-primary" style="width: 150px;">新規投稿する</button>
            <% end %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col px-0">
            <%= link_to unsubscribe_path do %>
              <button class="btn btn-outline-danger" style="width: 150px;">退会する</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- 新規投稿フォーム -->
    <div class="col-6 offset-1 mt-4">
      <div class="container">
        <div class="row mb-3">
          <div class="col">
            <h5><新規投稿></h5>
          </div>
        </div>
        <%= form_with model: @post do |f| %>
          <div class="row mb-3">
            <div class="col">
              <%= f.text_area :body, rows: "6", placeholder: "投稿内容を入力してください。", class: "form-control border-secondary" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.submit "投稿する", class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>