<% post_comments.each do |post_comment| %>
  <div class="container">
    <div class="row py-2 border-bottom">
      <div class="col-auto" style="width: 50px">
        <%= link_to user_path(post_comment.user_id) do %>
          <%= image_tag post_comment.user.get_profile_image(50, 50) %>
        <% end %>
      </div>
      <div class="col ms-4">
        <div class="container h-100 d-flex flex-column">
          <div class="row">
            <div class="col fw-bold">
              <%= link_to user_path(post_comment.user_id), class: "link-dark link-underline-opacity-0 link-underline-opacity-100-hover" do %>
                <%= post_comment.user.name %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= post_comment.comment %>
            </div>
            </div>
          <div class="row mt-auto">
            <div class="col">
              <%= post_comment.created_at %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-auto ms-auto px-0">
        <% if post_comment.user == current_user %>
          <div class="container h-100 d-flex flex-column">
            <div class="row  mt-auto">
              <div class="col px-0">
                <%= link_to post_post_comment_path(post_comment.post_id, post_comment.id), method: :delete, remote: true do %>
                  <i class="fa-solid fa-trash fa-lg" style="color: #dd1155;"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>