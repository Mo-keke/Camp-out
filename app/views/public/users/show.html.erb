<div class="container">
  <div class="row">

    <!-- ユーザー情報を表示するサイドバー -->
    <% if user_signed_in? %>
      <%= render 'public/users/login_user_sidebar', user: @user %>
    <% end %>

    <!-- 対象ユーザーのプロフィール・投稿一覧を表示 -->
    <div class="col-10 col-lg-9 ps-0 mt-4">
      <div class="col-11 offset-1">
        <div class="row mb-1 mb-md-2 mb-xl-3">
          <div class="col p-0">
            <h5 class="heading">&lt;<%= @target_user.name %>のプロフィール&gt;</h5>
          </div>
        </div>
        <div class="row pb-2 mb-4 border-bottom">
          <div class="col-auto p-0">
            <%= image_tag @target_user.get_profile_image(200, 200), class: "main_profile_image border border-secondary border-2 rounded" %>
          </div>
          <div class="col p-0 ms-md-2 ms-xl-4">
            <div class="container">
              <div class="row mb-1 mb-md-2 mb-xl-3">
                <div class="col">
                  <h3 class="main_user_name mb-0"><%= @target_user.name %></h3>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <h5 class="introduction mb-0"><%= safe_join((@target_user.introduction || "").split("\n"), tag(:br)) %></h5>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row mb-1 mb-md-2 mb-xl-3">
          <div class="col">
            <h5 class="heading">&lt;<%= @target_user.name %>の投稿一覧&gt;</h5>
          </div>
        </div>
        <%= render 'public/posts/posts_index', posts: @posts %>
      </div>
    </div>

  </div>
</div>