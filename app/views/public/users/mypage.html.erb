<div class="container-fruid">
  <div class="row">

    <!-- 自身のユーザー情報を表示するサイドバー -->
    <%= render 'public/users/login_user_sidebar', obj: @user %>

    <!-- ユーザープロフィール・自身の投稿を表示 -->
    <div class="col-6 offset-1 mt-4">
      <div class="container">
        <div class="row mb-3">
          <div class="col">
            <h5>&lt;<%= @user.name %>のマイページ&gt;</h5>
          </div>
        </div>
        <div class="row pb-2 mb-4 border-bottom">
          <div class="col-auto" style="width: 200px;">
            <%= image_tag @user.get_profile_image(200, 200) %>
          </div>
          <div class="col ms-4">
            <div class="container">
              <div class="row mb-3">
                <div class="col">
                  <h3><%= @user.name %></h3>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <h5><%= @user.introduction %></h5>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <h5><投稿一覧></h5>
          </div>
        </div>
        <% @posts.each do |post| %>
          <div class="row py-2 border-bottom">
            <div class="col-auto" style="width: 100px">
              <%= link_to user_path(post.user_id) do %>
                <%= image_tag post.user.get_profile_image(100, 100) %>
              <% end %>
            </div>
            <div class="col ms-4">
              <div class="container h-100 d-flex flex-column">
                <div class="row">
                  <div class="col fw-bold">
                    <%= link_to user_path(post.user_id), class: "link-dark link-underline-opacity-0 link-underline-opacity-100-hover" do %>
                      <%= post.user.name %>
                    <% end %>
                  </div>
                </div>
                <%= link_to post_path(post.id), class: "link-dark link-underline-opacity-0 link-underline-opacity-100-hover" do %>
                  <div class="row">
                    <div class="col">
                      <%= post.body %>
                    </div>
                  </div>
                <% end %>
                <div class="row mt-auto">
                  <div class="col">
                    <%= post.created_at %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>