<div class="container-fruid">
  <div class="row">

    <!-- 自身のユーザー情報を表示するサイドバー -->
    <%= render 'public/users/login_user_sidebar', obj: @user %>

    <!-- ユーザープロフィール編集フォーム-->
    <div class="col-6 offset-1 mt-4">
      <div class="container">
        <div class="row mb-3">
          <div class="col">
            <h5>ユーザープロフィール編集</h5>
          </div>
        </div>
        <%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
          <div class="row mb-3">
            <div class="col form-group">
              <%= f.label :プロフィール画像, class: "form-label" %>
              <%= f.file_field :profile_image, accept: "image/*", class: "form-control border-secondary" %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col form-group">
              <%= f.label :アカウント名, class: "form-label" %>
              <%= f.text_field :name, placeholder: "アカウント名", class: "form-control border-secondary" %>
            </div>
          </div>
          <div class="row mb-5">
            <div class="col form-group">
              <%= f.label :自己紹介, class: "form-label" %>
              <%= f.text_area :introduction, rows: "4", placeholder: "ここに自己紹介文を記述します", class: "form-control border-secondary" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.submit "編集を保存する", class: "btn btn-outline-primary" %>
            </div>
          </div>
         <% end %>
        </div>
      </div>
    </div>

  </div>
</div>